@if (Context.User.Identity.IsAuthenticated == false){
    <li class="nav-item">
        <a class="nav-link text-dark" 
            asp-controller="Doctores" 
            asp-action="PerfilDoctor">
            Log In
        </a>
    </li>
}else{
    <li class="nav-item">
        <a class="nav-link text-dark"
            asp-controller="Managed"
            asp-action="LogOut">
            Log Out <span style="color:fuchsia">
                @Context.User.Identity.Name
            </span>
        </a>
    </li>
}